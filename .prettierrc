{
  "printWidth": 100,
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "quoteProps": "consistent",
  "jsxBracketSameLine": false,
  "jsxSingleQuote": true,
  "arrowParens": "always",
  "trailingComma": "none",
  "importOrder": [
    "^@atoms(.*)$",
    "^@components(.*)$",
    "^@constants(.*)$",
    "^@data(.*)$",
    "^@hooks(.*)$",
    "^@pages(.*)$",
    "^@utils(.*)$",
    "^@views(.*)$",
    "^[./]"
  ],
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true,
  "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"]
}
