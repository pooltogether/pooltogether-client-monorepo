{
  "name": "pt-hooks",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist",
    "./styles.css": "./dist/styles.css"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react && tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "concurrently \"tsup src/index.tsx --format esm,cjs --dts --external react --watch\" \"tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch\"",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "concurrently": "^7.2.2",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "pt-types": "workspace:*",
    "react": "^18.2.0",
    "react-query": "^3.39.3",
    "tailwind-config": "workspace:*",
    "tailwindcss": "^3.1.5",
    "tsconfig": "workspace:*",
    "tsup": "^6.1.3",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "ethers": "^5.7.2",
    "pt-utilities": "workspace:*",
    "wagmi": "^0.9.4"
  }
}
