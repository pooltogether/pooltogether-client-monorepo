{
  "name": "pt-components",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist",
    "./styles.css": "./dist/styles.css"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup --dts && tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "prepare": "pnpm build",
    "clean": "rm -rf dist"
  },
  "tsup": {
    "entry": [
      "src/index.tsx"
    ],
    "clean": true,
    "format": [
      "esm"
    ]
  },
  "dependencies": {
    "@heroicons/react": "^2.0.16",
    "classnames": "^2.3.2",
    "flowbite": "^1.6.3",
    "flowbite-react": "^0.4.1",
    "pt-generic-hooks": "workspace:*",
    "pt-ui": "workspace:*",
    "pt-utilities": "workspace:*",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.53",
    "@types/react-dom": "^17.0.19",
    "pt-types": "workspace:*",
    "tailwind-config": "workspace:*",
    "tailwindcss": "^3.2.7",
    "tsconfig": "workspace:*",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  }
}
